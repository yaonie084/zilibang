

<%= form.inputs do %>
  <li><%= form.input :email, :input_html => { :class => "text-input medium-input" }, :label => "邮箱*" %></li>
  <li><%= form.input :password, :input_html => { :class => "text-input medium-input" }, :label => "密码*" %></li>
  <li><%= form.input :password_confirmation, :input_html => { :class => "text-input medium-input" }, :label => "重复密码*" %></li>

  <%#= form.collection_select :role, User::ROLES, :to_s, :humanize %>
<% end %>

<%= form.inputs :for => :profile do |profile_form| %>
  <%= profile_form.input :name, :input_html => { :class => "text-input medium-input" }, :label => "姓名"  %>
  <%= profile_form.input :tel, :input_html => { :class => "text-input medium-input" }, :label => "电话"  %>
  <%= profile_form.input :school, :input_html => { :class => "text-input medium-input" }, :label => "学校"  %>
  <%= profile_form.input :graduation, :as => :select, :collection => 2002..2022,  :label => "毕业时间"  %>
  <%= profile_form.input :plan, :as =>:radio, :collection => ["出国", "考研", "工作"], :label => "毕业后意向", :value_method => Proc.new { |a| $Plan[a] }%>

  <%= profile_form.input :description, :input_html => { :class => "text-input medium-input" }, :label => "个人简介"  %>
  <%= profile_form.input :avatar, :as => :file, :hint => "传头像",:label => "头像" %>

<% end %>
  <%#= form.input :humanizer_answer,:as=>:label, @user.humanizer_question %>
<%#= show_simple_captcha(:object=>"user") %>
<%#= form.input :captcha, :as => :simple_captcha, :label => "验证码" %>

<%= form.buttons do %>
  <%= form.commit_button :button_html => { :class => "button" ,:value => "提    交"} %>
<% end %>
