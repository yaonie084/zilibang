<table>
	<thead>
		<tr>
			<th> id </th>
			<th> 登录邮箱</th>
                        <th> 权限 </th>
			<th> 上次活动 </th>
			<th> 登录次数 </th>
			<th> 注册时间 </th>
			<th> 功能 </th>
		</tr>
	</thead>

	<tbody>
		<% @users.each do |user| %>
		<tr>

			<td><%= user.id %></td>
			<td><%= user.email %></td>
                        <td><%= user.role %></td>
			<td><%= user.last_request_at %></td>
			<td><%= user.login_count %></td>
			<td><%= user.created_at %></td>
			<td>
				<%= link_to "edit", edit_admin_user_path(user), :title => :edit, :class => "edit" %>&nbsp;
				<%= link_to "delete", admin_user_path(user), :method => :delete, :confirm => :delete_confirm, :title => :delete, :class => "delete" %>
			</td>
		</tr>
		<% end %>
	</tbody>

	<tfoot>
		<tr>
			<td colspan="4">
				<%= render :partial => "admin/shared/pagination", :locals => { :pagination => @users } %>
				<div class="clear"></div>
			</td>
		</tr>
	</tfoot>
</table>