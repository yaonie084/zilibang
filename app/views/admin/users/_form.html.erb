<%= form.inputs do %>
	<%= form.input :email, :input_html => { :class => "text-input medium-input" } %>
	<%= form.input :password, :input_html => { :class => "text-input medium-input" } %>
	<%= form.input :password_confirmation, :input_html => { :class => "text-input medium-input" } %>
        <%= form.collection_select :role, User::ROLES, :to_s, :humanize %>
<% end %>

<%= form.buttons do %>
	<%= form.commit_button :button_html => { :class => "button" } %>
<% end %>