<%= form.inputs do %>
  <%= form.input :title, :input_html => { :class => "text-input medium-input" } %>
  <%= form.input :description, :input_html => { :class => "text-input medium-input" } %>
  <%= form.input :longtime, :input_html => { :class => "text-input medium-input" } %>
  <%= form.input :tel, :input_html => { :class => "text-input medium-input" } %>
  <%= form.input :low_price, :input_html => { :class => "text-input medium-input" } %>
  <%= form.input :high_price, :input_html => { :class => "text-input medium-input" } %>
<%= form.input :over, :input_html => { :class => "text-input medium-input" } %>
<%= form.input :finish, :input_html => { :class => "text-input medium-input" } %>
