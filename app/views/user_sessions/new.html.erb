<%= form_for @user_session, :url => user_session_path() do |f| %>
<p>
	<%= f.label :email, "邮箱" %>
	<%= f.text_field :email, :class => "text-input" %>
</p>
<div class="clear"></div>
<p>
	<%= f.label :password, "密码" %>
	<%= f.password_field :password, :class => "text-input" %>
</p>

<div class="clear"></div>
<p>
	<%= f.submit "登录", :class => "button" %>
</p>
<% end %>

<%= link_to "忘记密码", forgot_password_path() %>