<!DOCTYPE html>
<html>
  <head>
    <title>Zilibang</title>
    <%= stylesheet_link_tag :all %>
    <%= javascript_include_tag 'defaults', 'jquery-1.5.1.js', 'rails.validations' -%>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <% if flash[:notice] -%>
  <div id="notice" style="color: #f00; border: 1px solid #666; margin: 5px;">

    <ul>
  <%# flash[:notice].each do |x| %>
    <%#*<li>%>
      <%#= "#{x.key}: #{x.value}" %>
    <%#*</li>%>
    <%# end   %>
      <%= flash[:notice] %>
    </ul>
  </div>
<% end -%>
    <% if current_user!= nil and current_user.profile!=nil %>
      <%= link_to current_user.profile.name, profile_path(current_user.profile) %>
    <% else %>
      <%= link_to "登入", login_url %>
    <% end %>
    <%= link_to "退出", logout_url %>
    <%= link_to "注册", new_user_url %>
    <%= yield %>

  </body>
</html>
