# and open the template in the editor.
%>


<table>
	<thead>
		<tr>
			<th>title</th>
			<th>description</th>
			<th>时间</th>
			<th>电话</th>
                        <th>金额</th>
                        <th>状态</th>
                        <th>发布时间</th>
			<th></th>
		</tr>
	</thead>

	<tbody>
		<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.description %></td>
			<td><%= post.longtime %></td>
                        <td><%= post.tel %></td>
                        <td><%= "#{post.low_price} - #{post.high_price}" %></td>
                        <td><%= post.state %></td>
			<td><%= post.created_at %></td>
			<td>
				<%= link_to "show", post_path(post), :title => :show, :class => "show" %>
                                <%= link_to "edit", edit_post_path(post), :title => :edit, :class => "edit" %>&nbsp;
				<%= link_to "delete", post_path(post), :method => :delete, :confirm => :delete, :title => :delete, :class => "delete" %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>