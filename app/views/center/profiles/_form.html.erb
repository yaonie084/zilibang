<%= form.inputs do %>
  <%= form.input :name, :input_html => { :class => "text-input medium-input" }, :label => "姓名"  %>
  <%= form.input :tel, :input_html => { :class => "text-input medium-input" }, :label => "电话"  %>
  <%= form.input :school, :input_html => { :class => "text-input medium-input" }, :label => "学校"  %>
  <%= form.input :graduation, :as => :select, :collection => 2002..2022,  :label => "毕业时间"  %>
  <%= form.input :plan, :as =>:radio, :collection => ["出国", "考研", "工作"], :label => "毕业后意向", :value_method => Proc.new { |a| $Plan[a] }%>

  <%= form.input :description, :input_html => { :class => "text-input medium-input" }, :label => "个人简介"  %>
  <%= form.input :avatar, :as => :file, :hint => "传头像",:label => "头像" %>
<% end %>

<%= form.buttons do %>
	<%= form.commit_button :button_html => { :class => "button" } %>
<% end %>